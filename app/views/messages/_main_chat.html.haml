.main
  .main__header
    .main__header__left-box
      .main__header__left-box__current-group
        = @group.name
      .main__header__left-box__member-list
        Memberï¼š
        - @group.users.each do |user|
          = user.name

    .main__header__right-box
      = link_to edit_group_path(@group) do
        .main__header__right-box__edit-btn Edit
  
  .main__messages
    = render @messages

  .main__form
    = form_for [@group, @message] do |f|
      .new_message__input
        = f.text_field :content, class: 'new_message__input__text', placeholder: 'type a message'
        = f.label :image, class: 'new_message__input__image' do
          = icon 'fas', 'image', class: 'icon'
        = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'new_message__send-btn'

  