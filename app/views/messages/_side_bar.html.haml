.side
  .side__header
    .side__header__box
      %p.side__header__box__name
        = current_user.name
      %p.side__header__box__menu
        = link_to new_group_path do
          %i.fas.fa-user-edit.fa-fw
        = link_to "#" do
          %i.fas.fa-cog.fa-fw.fa-spin
         
  .side__groups
    - current_user.groups.each do |group|
      .side__groups__group
        = link_to group_messages_path(group) do
          %p.side__groups__group__name 
            = group.name
          %p.side__groups__group__message
            = group.show_last_message